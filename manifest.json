{
    "manifest_version": 2,

    "name": "traefick proxy mapper",
    "version": "1.0",

    "icons": {
        "16" : "16.png",
        "32" : "32.png",
        "48" : "48.png",
        "128" : "128.png"
    },

    "permissions": [
        "storage",
        "webRequest", 
        "webRequestBlocking", 
        "<all_urls>",
        "tabs"
    ],

    "background": {
        "persistent": true,
        "scripts": [ "background.js" ]
    },

    "browser_action": {
        "default_title": "traefic proxy mapper",
        "default_icon":  "48.png",
        "default_popup": "index.html"
    }
}
